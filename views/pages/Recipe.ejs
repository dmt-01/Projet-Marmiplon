<%- include("../partials/head", { title: "Marmiplon - Recette" }) %>
<%- include("../partials/header") %>

<main>
  <% if (data) { %>
    <h2><%= data.title %></h2>

    <section>
      <h3>Ingrédients</h3>
      <ul>
        <% if (typeof ingredients !== "undefined" && ingredients.length > 0) { %>
          <% ingredients.forEach(function(item) { %>
            <li><%= item.name %> - <%= item.quantity %> <%= item.unit %></li>
          <% }) %>
        <% } else { %>
          <li>Aucun ingrédient trouvé</li>
        <% } %>
      </ul>
    </section>

    <section>
      <h3>Instructions</h3>
      <ol>
        <% if (typeof instructions !== "undefined" && instructions.length > 0) { %>
          <% instructions.forEach(function(step) { %>
            <li><%= step %></li>
          <% }) %>
        <% } else { %>
          <li>Aucune instruction trouvée</li>
        <% } %>
      </ol>
    </section>

  <% } else { %>
    <h2>Recette non trouvée</h2>
  <% } %>

  <button ><a href="/starter" class="btn">Retour aux entrées</a></button>
</main>

<%- include("../partials/footer") %>
