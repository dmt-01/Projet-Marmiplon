<%- include("../partials/head", { title: "Marmiplon - Recette" }) %>
<%- include("../partials/header") %>

<main>
  <h2><%= data.title %></h2>


  <section>
    <h3>Ingrédients</h3>
    <ul>
      <% if (data.ingredients) { %>
        <% data.ingredients.forEach(function(item) { %>
          <li><%= item %></li>
        <% }) %>
      <% } %>
    </ul>
  </section>
  <section>
    <h3>Instructions</h3>
    <ol>
      <% if (data.instructions) { %>
        <% data.instructions.forEach(function(step) { %>
          <li><%= step %></li>
        <% }) %>
      <% } %>
    </ol>
  </section>

  <a href="/starters" class="btn">Retour aux entrées</a>
</main>

<%- include("../partials/footer") %>